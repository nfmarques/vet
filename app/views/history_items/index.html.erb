<p id="notice"><%= notice %></p>

<h1>Listing History Items</h1>

<table>
  <thead>
  <tr>
    <th>Observation</th>
    <th>Animal</th>
    <th>Document</th>
    <th>User</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @history_items.each do |history_item| %>
      <tr>
        <td><%= history_item.observation %></td>
        <td><%= history_item.animal %></td>
        <td><%= history_item.document %></td>
        <td><%= history_item.user %></td>
        <td><%= link_to 'Show', history_item %></td>
        <td><%= link_to 'Edit', edit_history_item_path(history_item) %></td>
        <td><%= link_to 'Destroy', history_item, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

